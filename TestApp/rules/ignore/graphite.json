{
  "debug": true,

  "parameters": [
    {
      "query": "aliasByNode(scaleToSeconds(nonNegativeDerivative(spreadex.services.fins.live1.*.spreadex_otcs.total_incoming_messages.total-items), 1), 4)",
      "threshold": 1,
      "title": "OTCS Fins"
    },
    //{
    //  "query": "alias(spreadex.services.fins.live1.*.charting_appserver.application.process_cpu_usage-%, 'CPU %')",
    //  "threshold": 10,
    //  "title": "Process CPU",
    //  "recipients": "marc.jones@spreadex.com;michael.carroll@spreadex.com"
    //}
  ],

  "definition": {
    "input": {
      "$type": "@interval",
      "period": 5000
    },

    "filters": [
      {
        "$type": "@graphite",
        "url": "http://lapgrp001:8080",
        "query": "=> @event.query"
      },
      {
        "$type": "@script",
        "value": "@event.doAlert = @event.value > @event.threshold"
      },
      {
        "$type": "@groupby",
        "key": "=> @event.key",
        "filters": [
          {
            "$type": "@if",
            "value": "=> @event.doAlert"
          },
          {
            "$type": "@debounce",
            "period": 60000
          },
          //{
          //  "$type": "@consolef"
          //}
          {
            "$type": "@email",
            "smtp": "smtp.spreadex.com",
            "from": "graphite-alert@spreadex.com",
            "to": "marc.jones@spreadex.com",
            "subject": "Alert: {title} @ {value} ({key})",
            "body": "<pre>Value          {value} <br/>At             {timestamp}<br/>Threshold      {threshold} <br/>Chart:         <a href='http://lapgrp001:8080/{graphitePngQuery}'>Link</a> <br/>Key            {key}</pre>"
          }
        ]
      }
    ],

    "outputs": [
    ]
  }
}
